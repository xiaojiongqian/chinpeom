{
  "name": "chinpoem",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "cap:add": "cap add",
    "cap:build": "npm run build && cap copy",
    "cap:android": "npm run cap:build && cap open android",
    "cap:ios": "npm run cap:build && cap open ios"
  },
  "dependencies": {
    "@capacitor/android": "^5.2.0",
    "@capacitor/core": "^5.2.0",
    "@capacitor/ios": "^5.2.0",
    "@vueuse/core": "^10.0.0",
    "pinia": "^2.1.0",
    "vue": "^3.3.0",
    "vue-i18n": "^9.2.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.2.0",
    "@iconify/json": "^2.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.44.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "terser": "^5.18.0",
    "typescript": "^5.0.0",
    "unplugin-icons": "^0.16.0",
    "unplugin-vue-components": "^0.25.0",
    "vite": "^4.4.0",
    "vitest": "^1.0.4",
    "vue-tsc": "^1.6.0"
  }
} 