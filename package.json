{
  "name": "chinpoem",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "cross-env NODE_ENV=test vitest",
    "test:run": "cross-env NODE_ENV=test vitest run",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:ui": "cross-env NODE_ENV=test vitest --ui",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "cap:add": "cap add",
    "cap:build": "npm run build && cap copy",
    "cap:android": "npm run cap:build && cap open android",
    "cap:ios": "npm run cap:build && cap open ios",
    "test:poem": "cross-env NODE_ENV=test node tests/poemTest.mjs",
    "test:verify-fetch": "cross-env NODE_ENV=test node tests/verify-fetch.mjs",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "build:full": "npm run build && npm run server",
    "logs:cleanup": "node server/scripts/logCleanup.js cleanup",
    "logs:stats": "node server/scripts/logCleanup.js stats",
    "logs:test-cleanup": "node server/scripts/logCleanup.js test-cleanup",
    "logs:help": "node server/scripts/logCleanup.js help"
  },
  "dependencies": {
    "@capacitor/android": "^5.2.0",
    "@capacitor/core": "^5.2.0",
    "@capacitor/ios": "^5.2.0",
    "@vueuse/core": "^10.0.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.0",
    "pinia": "^2.1.0",
    "uuid": "^9.0.0",
    "vue": "^3.3.0",
    "vue-i18n": "^9.2.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.2.0",
    "@iconify/json": "^2.2.0",
    "@pinia/testing": "^0.1.3",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^24.0.0",
    "nodemon": "^3.0.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.18.0",
    "typescript": "~5.4.5",
    "unplugin-icons": "^0.16.0",
    "unplugin-vue-components": "^0.25.0",
    "vite": "^5.0.11",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27"
  }
}
